@model CourseApp.Models.Request
@{
    ViewData["Title"] = "AddRequest";
}

<div class="bg-success text-white m-5 p-4">
    Create a Request
</div>

<form asp-action="AddRequest" method="post" class="m-5">
    <div class="form-group">
        <label>Name : </label>
        <input class="form-control" asp-for="Name" /><br />
        <label>EMail : </label>
        <input class="form-control" asp-for="Email" /><br />
        <label>Phone : </label>
        <input class="form-control" asp-for="Phone" /><br />
        <label>Message : </label>
        <input class="form-control" asp-for="Message" /><br />
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>